/* components/list/list.wxss */

page {
  background: #f2f2f2;
}

.container {
  display: flex;
  flex-wrap: wrap;
}

.item {
  margin-top: 15rpx;
  margin-left: 8rpx;
  width: 48%;
  background: #fff;
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
}

.item>.image {
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  width: 360rpx;
  height: 360rpx;
}

.item>.detail>.info {
  color: #555;
  line-height: 30rpx;
}

.item>.detail {
  padding-left: 10rpx;
  padding-right: 10rpx;
}

.item>.detail>.bai {
  height: 42rpx;
  background: #fff;
}

.item>.detail>.priceCon>.now {
  font-weight: 600;
  font-size: 32rpx;
}

.item>.detail>.priceCon>.old {
  margin-left: 10rpx;
  color: #999;
  font-size: 24rpx;
  text-decoration: line-through;
}

.text_dot_2 {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
